{
    "compilerOptions": {
        "module": "es2022",
        "target": "es2022",
        "lib": [
            "es2022"
        ],
        "moduleResolution": "node",
        "rootDir": "src",
        "declarationDir": "dist/types",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "emitDeclarationOnly": true,
        "declaration": true,
        "noEmitOnError": true,
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
    ]
}